BoxLayout:
    orientation: "vertical"
    BoxLayout:
        orientation: "horizontal"
        TextInput:
            id: input_miles
            text: "0"
            multiline: False
            on_text: app.handle_convert()
        BoxLayout:
            orientation: "vertical"
            Button:
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                on_press: app.handle_increment(-1)

    Label:
        text: app.output_km
        font_size: 48
        color: (1, 1, 0, 1)
